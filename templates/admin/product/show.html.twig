{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    {% include "/customer/shared/_messages_flash.html.twig" %}
    <div class="container py-5">
        <div class="row">
            <div class="col-12 mb-3">
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-secondary">Revenir</a>
            </div>
            <div class="col-6">
                <div class="card">
                    <img src="{{ product.image }}" alt="produit" class="imageProductDetail">
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ product.name | upper }}</h3>
                    </div>
                    <div class="card-body">
                        <p>Prix : {{ product.price | priceFormatEuro }} </p>
                        <p>Cat√©gorie : {{ product.category.name }} </p>
                    </div>
                </div>
            </div>
            <div class="col-12 mb-3 mt-2">
                <a href="{{ path('admin_product_edit', { 'id' : product.id }) }}" class="btn btn-primary">Modifier</a>
            </div>
        </div>
    </div>
{% endblock %}
