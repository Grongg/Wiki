{% extends 'admin/base.html.twig' %}

{% block title %}Wiki - {{ spell.name }} {% endblock %}

{% block body %}
    <h1>Spell</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spell.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ spell.name }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ spell.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsPassive</th>
                <td>{{ spell.isPassive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ spell.resume }}</td>
            </tr>
            <tr>
                <th>SpellImage</th>
                <td>{{ spell.spellImage }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ spell.cost }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ spell.type }}</td>
            </tr>
            <tr>
                <th>Cooldown</th>
                <td>{{ spell.cooldown }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('spell_index') }}">back to list</a>

    <a href="{{ path('spell_edit', {'id': spell.id}) }}">edit</a>

    {{ include('spell/_delete_form.html.twig') }}
{% endblock %}
