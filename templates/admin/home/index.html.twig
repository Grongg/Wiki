{% extends 'admin/base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col-12 pb-5">
                <h3 class="text-center">Les Categories</h3>
            </div>
            {% for category in categories %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>{{ category.name }}</h5>
                        </div>
                        <div class="card-body">
                            <img src="{{ category.image }}" alt="" class="w-100 imageCard">
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('admin_category_show',{ 'id' : category.id }) }}" class="btn btn-info w-100">Consulter</a>
                        </div>
                        <a href="{{ path('admin_category_edit',{ 'id' : category.id }) }}" class="btn btn-primary w-100">Modifier</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="container py-5">
            <div class="row">
            <div class="col-12 pb-5">
                <h3 class="text-center">Les Produits</h3>
            </div>
            {% for product in products %}
                    <div class="col-4 mt-2">
                        <div class="card">
                            <div class="card-header">
                                <h5>{{ product.name | upper }}</h5>
                            </div>
                            <div class="card-body">
                                <img src="{{ product.image }}" alt="" class="w-100 imageCard">
                            </div>
                            <div class="card-footer">
                                <p>Prix : {{ product.price | priceFormatEuro }}</p>
                                <p>Cat√©gorie : {{ product.category.name}}</p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('admin_product_show',{ 'id' : product.id }) }}" class="btn btn-info w-100">Consulter</a>
                            </div>
                            <a href="{{ path('admin_product_edit',{ 'id' : product.id }) }}" class="btn btn-primary w-100">Modifier</a>                      
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
