{% extends 'customer/base.html.twig' %}

{% block title %}Hello CustomerchampionController!{% endblock %}

{% block body %}
  
    {% include "/customer/shared/_messages_flash.html.twig" %}

    <div class="container py-5">
        <div class="row">
            <div class="col-12 mb-3">
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-secondary">Revenir</a>
            </div>
            <div class="col-6">
                <div class="card">
                    <img src="{{ champion.mainImage }}" alt="produit" class="imagechampionDetail">
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ champion.name | upper }}</h3>
                    </div>
                    <div class="card-body">
                        <p>Prix : {{ champion.price | priceFormatEuro }} </p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('cart_add', {'id' : champion.id}) }}" class="btn btn-primary w-100">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
