{% extends 'customer/base.html.twig' %}

{% block title %}Wiki - Se Connecter{% endblock %}

{% block body %}
    {% include "/customer/shared/_messages_flash.html.twig" %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container mt-5 d-flex justify-content-center text-center">
        <div class="col-2">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mt-2 form-control mb-3" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="mt-2 form-control mb-3" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </div>
    </div>
</form>
{% endblock %}
