{% extends 'customer/base.html.twig' %}

{% block title %}Edit Password{% endblock %}

{% block body %}
    {% include "/customer/shared/_messages_flash.html.twig" %}
    <div class="container py-5">
        <div class="row">
            <div class="col-12 mb-3">
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-secondary">Revenir</a>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Modifier le mot de passe</h3>
                </div>
                <div class="card-body">
                    {{ form_start(editForm)  }}
                        {{ form_row(editForm.currentPassword) }}
                        {{ form_row(editForm.plainPassword.first) }}                 
                        {{ form_row(editForm.plainPassword.second) }}
                            <button type="submit" class="btn btn-primary mt-3">
                                Valider
                            </button>
                    {{ form_end(editForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}