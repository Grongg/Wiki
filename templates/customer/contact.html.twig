{% extends "customer/base.html.twig" %}

{% block title %} Wiki - Prendre Contact {% endblock %}

{% block body %}

    <div class="container py-5">
        <div class  ="row">
            {% include "customer/shared/_messages_flash.html.twig" %}
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Nous contacter</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <h6>Veuillez entrer votre email ici: </h6>
                            {{ form_row(form.email_customer) }}
                             <h6>Veuillez entrer votre message ici: </h6>
                            {{ form_row(form.content) }}
                        <button class="btn btn-primary mt-3">Envoyer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}