{% extends 'customer/base.html.twig' %}

{% block title %}Wiki - Produit {{ product.name | capitalize }}{% endblock %}

{% block body %}
  
    {% include "/customer/shared/_messages_flash.html.twig" %}


    <div class="align-items-center justify-content-center mt-5">
        <div class="productProfile d-flex align-items-center justify-content-center">  
            <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-5 d-flex align-items-center justify-content-center">
                    <img src="{{ product.image }}" alt="produit" class="imageProductDetail">
            </div>
            <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-9 mt-5 mb-5">
                <div class="card">
                    <div class="card-header">
                        <h3 class="pdth3">{{ product.name | upper }}</h3>
                    </div>
                    <div class="card-body">
                        <p class="pdth3">Prix : <strong>{{ product.price | priceFormatEuro }}</strong> </p>
                        <p class="pdth3">Catégorie : <strong>{{ product.category.name }}</strong> </p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('cart_add', {'id' : product.id}) }}" class="btn btn-secondary w-100 pdth3 mb-3">Ajouter au panier</a>
                        <a href="{{ path('customer_home', {'id' : product.id}) }}" class="btn btn-dark w-100 pdth3">Revenir à la page d'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
